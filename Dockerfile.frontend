FROM node:20-alpine AS builder

WORKDIR /app

# Копируем package files
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем все исходники
COPY . .

# Билдим все фронтенды
RUN npm run build

# Создаём директорию для отчётов (гарантируем её наличие)
RUN mkdir -p tests/public/autotest

# Запускаем тесты и генерируем отчёты (опционально, если .env.autotest существует)
RUN chmod +x run-tests-and-deploy.sh && ./run-tests-and-deploy.sh || echo "Tests skipped"

# Production stage с nginx
FROM nginx:alpine

# Копируем билды
COPY --from=builder /app/dist /usr/share/nginx/html/landing
COPY --from=builder /app/dist /usr/share/nginx/html/lk
COPY --from=builder /app/dist /usr/share/nginx/html/admin

# Копируем autotest отчёты (создаём пустую директорию если тесты не запускались)
COPY --from=builder /app/tests/public/autotest /usr/share/nginx/html/autotest

# Копируем nginx конфиг
COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
